<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_9blog">


    <TextView
        android:id="@+id/txtv_9topcolor"
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:background="@color/mainGreen"
        app:layout_constraintBottom_toBottomOf="@+id/txtv_9titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imgv7_02_atras"
        android:layout_width="34dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView_901"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_arrow_back" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavV_9bottomMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/navigation" />

    <TextView
        android:id="@+id/txtv_9titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blogtitulo"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNavV_9bottomMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <ScrollView
        android:id="@+id/scrollView_901"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgv7_02_atras"
        app:layout_constraintVertical_bias="0.95">


        <LinearLayout
            android:id="@+id/linearLayout_902"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:background="@color/claro"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.21">

            <TextView
                android:id="@+id/txtv_9nombrereceta01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/tituloreceta01"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtv_9fecha01"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical|end"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:text="@string/fechareceta01"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtv_9instrucciones011"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="@dimen/fab_margin"
                android:layout_marginBottom="50dp"
                android:paddingHorizontal="25dp"
                android:text="@string/descreceta01" />

            <ImageView
                android:id="@+id/imagereceta011"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:srcCompat="@drawable/receta021" />

            <TextView
                android:id="@+id/txtv_9instrucciones012"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="@dimen/fab_margin"
                android:layout_marginBottom="50dp"
                android:paddingHorizontal="25dp"
                android:text="@string/descreceta01" />

            <ImageView
                android:id="@+id/imagereceta012"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:srcCompat="@drawable/receta022" />

            <TextView
                android:id="@+id/txtv_9instrucciones013"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="@dimen/fab_margin"
                android:layout_marginBottom="50dp"
                android:paddingHorizontal="25dp"
                android:text="@string/descreceta01" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>