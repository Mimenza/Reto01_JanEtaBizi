<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/card_background">

    <ImageView
        android:id="@+id/imgv_cardimg"
        android:layout_width="90dp"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="237dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtv_cardeuros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pizza" />

    <TextView
        android:id="@+id/txtv_cardtittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="16dp"
        android:text="Ttitle"
        android:textColor="@color/card_title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imgv_cardimg"
        app:layout_constraintTop_toTopOf="@+id/imgv_cardimg" />

    <TextView
        android:id="@+id/txtv_cardeuros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="8dp"
        android:text="@string/euros"
        android:textColor="@color/card_title"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/txtv_cardeurostotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgv_cardimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtv_cardeurostotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/euros"
        android:textColor="@color/card_title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtv_cardeuros"
        app:layout_constraintStart_toStartOf="@+id/txtv_cardeuros"
        app:layout_constraintTop_toBottomOf="@+id/txtv_cardeuros" />

    <ImageView
        android:id="@+id/imgv_cardmenos"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="242dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.282"
        app:layout_constraintStart_toEndOf="@+id/imgv_cardimg"
        app:layout_constraintTop_toBottomOf="@+id/txtv_cardtittle"
        app:srcCompat="@drawable/ic_minus" />

    <TextView
        android:id="@+id/txtv_cardcantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1"
        android:textColor="@color/card_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imgv_cardmas"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/imgv_cardmenos"
        app:layout_constraintTop_toTopOf="@+id/imgv_cardmas" />

    <ImageView
        android:id="@+id/imgv_cardmas"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgv_cardmenos"
        app:layout_constraintEnd_toStartOf="@+id/txtv_cardeurostotal"
        app:layout_constraintHorizontal_bias="0.316"
        app:layout_constraintStart_toEndOf="@+id/imgv_cardimg"
        app:layout_constraintTop_toTopOf="@+id/imgv_cardmenos"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_plus" />

</androidx.constraintlayout.widget.ConstraintLayout>