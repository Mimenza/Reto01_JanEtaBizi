<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity_3principal">


    <TextView
        android:id="@+id/txtv_3topbarColor"
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:background="@color/mainGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgv_3Logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/txt_3busqueda"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:background="@drawable/search_bg"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/filtrobusquedacomida"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavV_3bottomMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/navigation" />

    <ScrollView
        android:id="@+id/sv_3scrollView"
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515"
        tools:ignore="SpeakableTextPresentCheck">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tb_3tablaProductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"></TableLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/sv_3scrollViewFiltro"
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/ll_3vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_3horizontal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_3vegan"
                    android:layout_width="189dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/iv_3vegan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza" />

                    <TextView
                        android:id="@+id/tv_3vegan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Vegan"
                        android:textColor="#CC000000"
                        android:textSize="20pt"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_3vegetarian"
                    android:layout_width="189dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/iv_3vegetarian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza" />

                    <TextView
                        android:id="@+id/tv_3vegetarian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Vegetarian"
                        android:textColor="#CC000000"
                        android:textSize="17pt"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3horizontal2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_3km0"
                    android:layout_width="189dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/ci_3km0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza" />

                    <TextView
                        android:id="@+id/tv_3km0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="KM 0"
                        android:textColor="#CC000000"
                        android:textSize="20pt"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_3gluten"
                    android:layout_width="189dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/iv_3gluten"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza" />

                    <TextView
                        android:id="@+id/tv_3gluten"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Gluten free"
                        android:textColor="#CC000000"
                        android:textSize="20pt"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3horizontal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_3lactose"
                    android:layout_width="189dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/ci_3lactose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza" />

                    <TextView
                        android:id="@+id/tv_3lactose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Lactose free"
                        android:textColor="#CC000000"
                        android:textSize="20pt"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_3protein"
                    android:layout_width="189dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/ci_3protein"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza" />

                    <TextView
                        android:id="@+id/tv_3protein"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="High protein"
                        android:textColor="#CC000000"
                        android:textSize="20pt"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3horizontal4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_3palm"
                    android:layout_width="189dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/ci_3palm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pizza" />

                    <TextView
                        android:id="@+id/tv_3palm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Palm oil free"
                        android:textColor="#CC000000"
                        android:textSize="20pt"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>