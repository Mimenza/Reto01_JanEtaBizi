<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_6usuario"
  >
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/navigation" />

    <!--Linear layout de Logout-->
    <!--Linear layout de Logout Fin-->


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgv_6perfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/descarga" />


    <!--Linear layout de Nombre de Usuario-->
    <TextView
        android:id="@+id/txt_6nombreuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgv_6perfil"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-40dp"
        android:text="Nombre de usuario"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linlay_1nombreusuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_6nombreuser"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="61dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_person" />


        <com.google.android.material.textfield.TextInputLayout
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:hint="@string/txt1_nombreusuario" />

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>
    <!--Linear layout de Nombre de usuario Fin-->


<!--Linear layout de Correo-->
    <LinearLayout
        android:id="@+id/linlay_2correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linlay_1nombreusuario"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_email" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:hint="@string/txt2_correo" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <!--Linear layout de Correo Fin-->

    <!--Linear layout de Contraseña-->
    <LinearLayout
        android:id="@+id/linlay_3contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linlay_2correo"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_password" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:hint="@string/txt3_contraseña" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <!--Linear layout de Ajustes Fin-->
    <ImageView
        android:id="@+id/imgv6_atras"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_arrow_back" />

    <ImageView
        android:id="@+id/imgv6_logout"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_logout" />

    <Button
        android:id="@+id/btn6_cambiardatosusuario"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="155dp"

        android:layout_marginBottom="122dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:endColor="#20B2AA"
        android:startColor="#76FF7A"
        android:text="@string/txt4_guardar" />


</RelativeLayout>